<div class="container bg-light shadow-sm rounded py-2 mt-2">
  <h3 align="center"><%= @user.name %></h3>
  <p>
    <strong>E-mail: </strong><%= @user.email %><br>
    <strong>Registered: </strong><%= @user.created_at %><br>
    <strong>Created events:</strong><%= @user.created_events.count %><br>
    <strong>Attended events:</strong><%= @user.attended_events.count %><br>
  </p>
</div>

<div class="container bg-light shadow-sm rounded py-2 mt-3">
  <h4 align="center">Created Events</h4>
  <ul class="list-group">
    <% @user.created_events.each do |event| %>
      <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-active" %>
    <% end %>
  </ul>
</div>
<div class="container bg-light shadow-sm rounded py-2 mt-3">
  <h4 align="center">Not yet Attended</h4>
  <ul class="list-group">
    <% @user.attended_events.future.each do |event| %>
      <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-active" %>
    <% end %>
  </ul>
</div>
<div class="container bg-light shadow-sm rounded py-2 mt-3">
  <h4 align="center">Already Attended</h4>
  <ul class="list-group">
    <% @user.attended_events.past.each do |event| %>
      <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-active" %>
    <% end %>
  </ul>
</div>