<!DOCTYPE html>
<html>
<head>
  <title>PrivateEvents</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-3">
  <div class="container-fluid">
    <%= link_to 'Private Events', root_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Events', events_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
    <div class="d-flex">
      <% if user_signed_in? %>
        <%= link_to 'Create Event', new_event_path, class: 'btn btn-outline-primary' %>
        <%= link_to current_user.name, current_user, class: 'mx-3 btn btn-outline-primary' %>
        <%= link_to 'Log Out', destroy_user_session_path, class: 'btn btn-outline-danger', method: :delete %>
      <% else %>
        <%= link_to 'Log In', new_user_session_path, class: 'mx-3 btn btn-outline-success' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-outline-success' %>
      <% end %>

    </div>
  </div>
</nav>
<% flash.each do |type, msg| %>
  <% type = type == 'alert' ? 'warning' : 'success' %>
  <div class="alert alert-<%= type %>">
    <%= msg %>
  </div>
<% end %>
<%= yield %>
</body>
</html>
