<% flash.each do |type, msg| %>
  <% type = type == 'alert' ? 'warning' : 'success' %>
  <div class="alert alert-<%= type %>">
    <%= msg %>
  </div>
<% end %>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<h5>Attendees</h5>
<ul>
  <% @event.attendees.each do |attendee| %>
    <li><%= attendee.name %></li>
  <% end %>
</ul>

<%= link_to 'Attend', event_path(@event) + "/attend" %>

