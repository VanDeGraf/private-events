<% flash.each do |type, msg| %>
  <% type = type == 'alert' ? 'warning' : 'success' %>
  <div class="alert alert-<%= type %>">
    <%= msg %>
  </div>
<% end %>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<%= link_to 'Attend', event_path(@event) + "/attend" %>

