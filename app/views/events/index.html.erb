<div class="container shadow-sm mt-3 p-3">
  <h3 align="center">Events</h3>

  <ul class="list-group">
    <% @events.each do |event| %>
      <a href="<%= event_path(event) %>" class="list-group-item list-group-item-action">
        <h5><%= event.title %></h5>
        <p>
          <%= event.description %>
        </p>
        <small><%= event.date %></small>
      </a>
    <% end %>
  </ul>
</div>